{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true, "outDir": "dist/src/" },
      { "include": "../public", "watchAssets": true, "outDir": "dist/public/" }
    ],
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true
  }
}
